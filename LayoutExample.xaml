<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CursoMaui.LayoutExample"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LayoutExample">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Minha Pagina!"
            VerticalOptions="Center" />
        <Grid ColumnDefinitions="Auto, 30, Auto">
            <Button
                Grid.Column="0"
                Text="Testando botão"
                WidthRequest="100" />
            <Button
                Grid.Column="2"
                Text="Testando botão"
                WidthRequest="100" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>