<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CursoMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CursoMaui"
    Title="CursoMaui">

    <TabBar>
        <Tab Title="Pagina 1" Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:HomePage}"
                Route="HomePage" />
        </Tab>
        <Tab Title="Pagina 2" Icon="search.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:LayoutExample}"
                Route="LayoutExample" />
        </Tab>
        <Tab Title="Pagina 3" Icon="happy.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </TabBar>


</Shell>
